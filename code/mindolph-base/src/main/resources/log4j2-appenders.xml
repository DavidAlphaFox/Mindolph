<?xml version="1.0" encoding="UTF-8"?>
<Appenders>
    <Console name="Console" target="SYSTEM_OUT">
        <PatternLayout pattern="%d{HH:mm:ss} %5p %24.20c{1}:%4L - %m%n"/>
    </Console>
    <File name="LogFile" fileName="${sys:user.home}/.mindolph/mindolph.log" bufferedIO="false" immediateFlush="true">
        <PatternLayout>
            <Pattern>%d %24.20c{1}:%4L %m %ex%n</Pattern>
        </PatternLayout>
    </File>
</Appenders>
